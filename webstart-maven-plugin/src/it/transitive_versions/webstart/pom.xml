<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.codehaus.mojo.transitive.versions</groupId>
		<artifactId>transitive-versions-parent</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>


	<artifactId>webapp</artifactId>
	<packaging>war</packaging>
	<name>Webstart Demo WebApplication</name>

	<description>
    Web-application to demonstrate the WebstartMavenPlugin.
  </description>


	<organization>
		<name>MyCompany</name>
		<url>http://www.mycompany.org</url>
	</organization>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>server</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>@project.version@</version>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>jnlp-download-servlet</goal>
						</goals>
					</execution>
				</executions>

				<configuration>
					<jnlpFiles>
						<jnlpFile>
							<templateFilename>jnlpTemplate.vm</templateFilename>
							<outputFilename>launch1.jnlp</outputFilename>
							<jarResources>
								<jarResource>
									<groupId>${project.groupId}</groupId>
									<artifactId>client</artifactId>
									<version>${project.version}</version>
									<mainClass>org.mycompany.webstart.HelloWorld</mainClass>
									<outputJarVersion>false</outputJarVersion>
									<transitiveOutputVersions>false</transitiveOutputVersions>
								</jarResource>
							</jarResources>
						</jnlpFile>
						<jnlpFile>
							<templateFilename>jnlpTemplate.vm</templateFilename>
							<outputFilename>launch2.jnlp</outputFilename>
							<jarResources>
								<jarResource>
									<groupId>${project.groupId}</groupId>
									<artifactId>client</artifactId>
									<version>${project.version}</version>
									<mainClass>org.mycompany.webstart.HelloWorld</mainClass>
									<outputJarVersion>false</outputJarVersion>
								</jarResource>
							</jarResources>
						</jnlpFile>
						<jnlpFile>
							<templateFilename>jnlpTemplate.vm</templateFilename>
							<outputFilename>launch3.jnlp</outputFilename>
							<jarResources>
								<jarResource>
									<groupId>${project.groupId}</groupId>
									<artifactId>client</artifactId>
									<version>${project.version}</version>
									<mainClass>org.mycompany.webstart.HelloWorld2</mainClass>
									<outputJarVersion>false</outputJarVersion>
								</jarResource>
								<jarResource>
									<groupId>${project.groupId}</groupId>
									<artifactId>client1</artifactId>
									<version>${project.version}</version>
									<outputJarVersion>false</outputJarVersion>
									<transitiveOutputVersions>false</transitiveOutputVersions>
								</jarResource>
							</jarResources>
						</jnlpFile>
					</jnlpFiles>
					<libPath>lib</libPath>

          <filenameMapping>simple</filenameMapping>
          <!-- use simple filename mapping -->
				</configuration>
			</plugin>
		</plugins>
		<finalName>webapp</finalName>
	</build>
</project>
